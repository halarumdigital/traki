# ==================================
# DATABASE CONFIGURATION
# ==================================

# PostgreSQL individual settings (optional if using DATABASE_URL)
DB_HOST=your_database_host
DB_PORT=5432
DB_NAME=your_database_name
DB_USER=your_database_user
DB_PASSWORD=your_database_password

# Complete PostgreSQL connection URL (required)
# Format: postgresql://[user]:[password]@[host]:[port]/[database]
DATABASE_URL=postgresql://user:password@host:port/database

# Database options
DB_SSL=false
DB_POOL_MIN=2
DB_POOL_MAX=10

# ==================================
# SERVER CONFIGURATION
# ==================================

# Server port
PORT=5010

# Node environment: development | production
NODE_ENV=development

# Session secret (change in production!)
SESSION_SECRET=your-secret-key-change-in-production

# CORS origin
CORS_ORIGIN=http://localhost:5173

# Server URL (for building complete URLs for images/files)
# Development: http://localhost:5010
# Production: https://your-domain.com
SERVER_URL=http://localhost:5010

# ==================================
# MONITORING & ERROR TRACKING
# ==================================

# Sentry Configuration - Backend
SENTRY_DSN=your_sentry_dsn_here
SENTRY_ENVIRONMENT=development
APP_VERSION=1.0.0

# ==================================
# STORAGE
# ==================================

# Cloudflare R2 Configuration
R2_ACCOUNT_ID=your_cloudflare_account_id
R2_ACCESS_KEY_ID=your_r2_access_key_id
R2_SECRET_ACCESS_KEY=your_r2_secret_access_key
R2_BUCKET_NAME=fretus-storage
R2_PUBLIC_URL=https://your-r2-bucket.r2.dev

# ==================================
# EXTERNAL APIs
# ==================================

# CPF Query API (Cellereit)
CELLEREIT_API_TOKEN=your_cellereit_api_token_here

# ==================================
# PAYMENT INTEGRATION (PIX)
# ==================================

# OpenPix/Woovi API Configuration
# Get your credentials at: https://app.openpix.com.br or https://app.woovi.com
WOOVI_APP_ID=your_woovi_app_id_here

# Woovi environment: 'sandbox' or 'production'
WOOVI_ENVIRONMENT=sandbox

# Woovi API URL (based on environment)
# Production: https://api.woovi.com
# Sandbox: https://api.woovi-sandbox.com
WOOVI_API_URL=https://api.woovi-sandbox.com

# Main PIX key (admin/Fretus platform)
# This PIX key will receive delivery commissions
WOOVI_ADMIN_PIX_KEY=admin@fretus.com
WOOVI_ADMIN_PIX_KEY_TYPE=EMAIL

# ==================================
# FIREBASE (PUSH NOTIFICATIONS)
# ==================================

# Firebase Configuration
